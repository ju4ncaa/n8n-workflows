    {
      "parameters": {
        "jsCode": "const content = $node[\"Crear Ideas\"].json.choices?.[0]?.message?.content;\n\nif (!content) {\n  throw new Error(\"No encuentro choices[0].message.content en 'Crear Ideas'\");\n}\n\nlet ideas;\ntry {\n  ideas = JSON.parse(content);\n} catch (e) {\n  throw new Error(\"El content no es JSON válido. Revisa salida del modelo: \" + e.message);\n}\n\nif (!Array.isArray(ideas)) {\n  throw new Error(\"La IA no devolvió un array JSON. Devuelve: \" + typeof ideas);\n}\n\nreturn ideas.map(i => ({\n  json: {\n    titulo: (i.titulo || \"\").trim(),\n    descripcion: (i.descripcion || \"\").trim()\n    \n  }\n}));"
      },
